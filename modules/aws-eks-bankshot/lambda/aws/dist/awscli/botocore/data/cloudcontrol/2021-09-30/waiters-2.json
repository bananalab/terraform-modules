{
  "version": 2,
  "waiters": {
    "ResourceRequestSuccess": {
      "acceptors": [
        {
          "argument": "ProgressEvent.OperationStatus",
          "expected": "SUCCESS",
          "matcher": "path",
          "state": "success"
        },
        {
          "argument": "ProgressEvent.OperationStatus",
          "expected": "FAILED",
          "matcher": "path",
          "state": "failure"
        },
        {
          "argument": "ProgressEvent.OperationStatus",
          "expected": "CANCEL_COMPLETE",
          "matcher": "path",
          "state": "failure"
        }
      ],
      "delay": 5,
      "description": "Wait until resource operation request is successful",
      "maxAttempts": 24,
      "operation": "GetResourceRequestStatus"
    }
  }
}
