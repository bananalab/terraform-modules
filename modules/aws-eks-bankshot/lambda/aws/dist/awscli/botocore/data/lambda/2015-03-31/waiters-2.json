{
  "version": 2,
  "waiters": {
    "FunctionActive": {
      "acceptors": [
        {
          "argument": "State",
          "expected": "Active",
          "matcher": "path",
          "state": "success"
        },
        {
          "argument": "State",
          "expected": "Failed",
          "matcher": "path",
          "state": "failure"
        },
        {
          "argument": "State",
          "expected": "Pending",
          "matcher": "path",
          "state": "retry"
        }
      ],
      "delay": 5,
      "description": "Waits for the function's State to be Active. This waiter uses GetFunctionConfiguration API. This should be used after new function creation.",
      "maxAttempts": 60,
      "operation": "GetFunctionConfiguration"
    },
    "FunctionActiveV2": {
      "acceptors": [
        {
          "argument": "Configuration.State",
          "expected": "Active",
          "matcher": "path",
          "state": "success"
        },
        {
          "argument": "Configuration.State",
          "expected": "Failed",
          "matcher": "path",
          "state": "failure"
        },
        {
          "argument": "Configuration.State",
          "expected": "Pending",
          "matcher": "path",
          "state": "retry"
        }
      ],
      "delay": 1,
      "description": "Waits for the function's State to be Active. This waiter uses GetFunction API. This should be used after new function creation.",
      "maxAttempts": 300,
      "operation": "GetFunction"
    },
    "FunctionExists": {
      "acceptors": [
        {
          "expected": 200,
          "matcher": "status",
          "state": "success"
        },
        {
          "expected": "ResourceNotFoundException",
          "matcher": "error",
          "state": "retry"
        }
      ],
      "delay": 1,
      "maxAttempts": 20,
      "operation": "GetFunction"
    },
    "FunctionUpdated": {
      "acceptors": [
        {
          "argument": "LastUpdateStatus",
          "expected": "Successful",
          "matcher": "path",
          "state": "success"
        },
        {
          "argument": "LastUpdateStatus",
          "expected": "Failed",
          "matcher": "path",
          "state": "failure"
        },
        {
          "argument": "LastUpdateStatus",
          "expected": "InProgress",
          "matcher": "path",
          "state": "retry"
        }
      ],
      "delay": 5,
      "description": "Waits for the function's LastUpdateStatus to be Successful. This waiter uses GetFunctionConfiguration API. This should be used after function updates.",
      "maxAttempts": 60,
      "operation": "GetFunctionConfiguration"
    },
    "FunctionUpdatedV2": {
      "acceptors": [
        {
          "argument": "Configuration.LastUpdateStatus",
          "expected": "Successful",
          "matcher": "path",
          "state": "success"
        },
        {
          "argument": "Configuration.LastUpdateStatus",
          "expected": "Failed",
          "matcher": "path",
          "state": "failure"
        },
        {
          "argument": "Configuration.LastUpdateStatus",
          "expected": "InProgress",
          "matcher": "path",
          "state": "retry"
        }
      ],
      "delay": 1,
      "description": "Waits for the function's LastUpdateStatus to be Successful. This waiter uses GetFunction API. This should be used after function updates.",
      "maxAttempts": 300,
      "operation": "GetFunction"
    }
  }
}
